{
    "name": "mobiledetect/mobiledetectlib",
    "type": "library",
    "description": "Mobile_Detect is a lightweight PHP class for detecting mobile devices. It uses the User-Agent string combined with specific HTTP headers to detect the mobile environment.",
    "keywords": ["mobile", "mobile detect", "mobile detector", "php mobile detect", "detect mobile devices"],
    "homepage": "https://github.com/serbanghita/Mobile-Detect",
    "license": "MIT",
    "authors": [
        {
            "name": "Serban Ghita",
            "email": "serbanghita@gmail.com",
            "homepage": "http://mobiledetect.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "~4.8.35||~5.7"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "classmap": ["Mobile_Detect.php"],
        "psr-0": {
            "Detection": "namespaced/"
        }
    },
    "archive": {
      "exclude": ["docs", "examples", "export"]
    },
    "scripts": {
        "cs-fixer:check": "vendor/bin/php-cs-fixer fix --dry-run --ansi -vvv --show-progress=estimating --diff --diff-format udiff",
        "cs-fixer:fix": "vendor/bin/php-cs-fixer fix --ansi -vvv --show-progress=estimating --diff --diff-format udiff"
    }
}
